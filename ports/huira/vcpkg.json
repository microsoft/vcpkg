  "homepage": "https://github.com/YOUR_ORG/huira",
  "license": "MIT",
  "dependencies": [
    "assimp",
    "cfitsio",
    "cspice",
    "glm",
    "libjpeg-turbo",
    "libpng",
    "tbb",
