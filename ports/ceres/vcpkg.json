{
  "name": "ceres",
  "version": "2.1.0",
  "port-version": 2,
  "description": "non-linear optimization package",
  "homepage": "https://github.com/ceres-solver/ceres-solver",
  "license": "Apache-2.0",
  "dependencies": [
    "eigen3",
    {
      "name": "glog",
      "platform": "!(arm & uwp)"
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "cuda": {
      "description": "Support for CUDA based dense solvers",
      "supports": "linux | (!osx & !uwp & !(arm64 & windows))",
      "dependencies": [
        "cuda"
      ]
    },
    "cxsparse": {
      "description": "CXSparse support for Ceres",
      "dependencies": [
        {
          "name": "suitesparse",
          "default-features": false
        }
      ]
    },
    "eigensparse": {
      "description": "Use of Eigen as a sparse linear algebra library in Ceres"
    },
    "lapack": {
      "description": "Use Lapack in Ceres",
      "dependencies": [
        "lapack"
      ]
    },
    "suitesparse": {
      "description": "SuiteSparse support for Ceres",
      "dependencies": [
        {
          "name": "ceres",
          "features": [
            "lapack"
          ]
        },
        {
          "name": "suitesparse",
          "default-features": false
        }
      ]
    },
    "tools": {
      "description": "Ceres tools",
      "dependencies": [
        "gflags"
      ]
    }
  }
}
