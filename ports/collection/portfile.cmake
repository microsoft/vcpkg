vcpkg_check_linkage(ONLY_STATIC_LIBRARY)

vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO open-source-patterns/collection
    REF "${VERSION}"
    SHA512 94114e047d8a0c97e141ea29a2ad8844aa9472d58280c0e9fb9cce6bc62b7df7283a455cd43db209202be6d113fe424b69b3947fbe9e3842102e8f71bac561b2
    HEAD_REF main
)

