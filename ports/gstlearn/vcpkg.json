{
  "name": "gstlearn",
  "version": "1.8.0",
  "description": "The Geostatistics & Machine Learning C++ Library",
  "homepage": "https://gstlearn.org/",
  "license": "BSD-3-Clause",
  "dependencies": [
    "boost-core",
    "boost-math",
    "eigen3",
    "nlopt",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "hdf5": {
      "description": "Build with the HDF5 extension",
      "dependencies": [
        {
          "name": "hdf5",
          "default-features": false,
          "features": [
            "cpp"
          ]
        }
      ]
    }
  }
}
