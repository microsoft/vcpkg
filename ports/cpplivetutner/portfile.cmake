vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO andogensi/CppLiveTuner
    REF "v${VERSION}"
    SHA512 9E0077EAC6703A7E2B282F4D37AD86F3E258087748ECBF9652BCEBDA37B14D6C438E7629330963BA7513DD83E3083B157E89C3D71AE2084B887C2470AC5CEF26
    HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
    OPTIONS
        -DLIVETUNER_BUILD_EXAMPLES=OFF
        -DLIVETUNER_BUILD_TESTS=OFF
        -DLIVETUNER_INSTALL=ON
)

vcpkg_cmake_install()

vcpkg_cmake_config_fixup(CONFIG_PATH lib/cmake/LiveTuner)

file(REMOVE_RECURSE "${CURRENT_PACKAGES_DIR}/lib" "${CURRENT_PACKAGES_DIR}/debug")

vcpkg_install_copyright(FILE_LIST "${SOURCE_PATH}/LICENSE")
