+)
+install(FILES
+    "${CMAKE_CURRENT_BINARY_DIR}/unofficial-llvm-openmp-config.cmake"
+    "${CMAKE_CURRENT_BINARY_DIR}/unofficial-llvm-openmp-config-version.cmake"
+    DESTINATION ${PORT_SHARE_DIR}
