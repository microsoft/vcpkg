{
  "name": "libmagic",
  "version": "5.45",
  "port-version": 2,
  "description": "This library can be used to classify files according to magic number tests.",
  "homepage": "https://github.com/file/file",
  "license": "BSD-2-Clause",
  "dependencies": [
    {
      "name": "dirent",
      "platform": "windows"
    },
    {
      "name": "getopt",
      "platform": "windows"
    },
    {
      "name": "libmagic",
      "host": true
    },
    {
      "name": "tre",
      "platform": "windows | mingw"
    }
  ],
  "features": {
    "bzlib": {
      "description": "Enable Bzip2 support",
      "dependencies": [
        "bzip2"
      ]
    },
    "xzlib": {
      "description": "Enable liblzma/xz support",
      "dependencies": [
        "liblzma"
      ]
    },
    "zlib": {
      "description": "Enable zlib support",
      "dependencies": [
        "zlib"
      ]
    },
    "zstdlib": {
      "description": "Enable zstdlib support",
      "dependencies": [
        "zstd"
      ]
    }
  }
}
