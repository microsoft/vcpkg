if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 094243e11100badf46cc416d075605f03179fb2d
	SHA512 c94f3113e9889035f92f13165e85d0090ff635122d7c2d462cc80a8947868be19e698360729b4f7ccf702c19fa3faeca92ad360b828bbf901a24e91941f483a7
