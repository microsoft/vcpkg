if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 4366c5d1d93c1403b9ea0283a05e084c1135f4a1
	SHA512 632e2cbbeba29d81655cef6ee20bce7d7865229e3b6635f7f37c92bc7f9a4cd83f29696d102427a25e8db29fdd44ab5b2fb66a2eab4f889f01d9029f467c98a2
