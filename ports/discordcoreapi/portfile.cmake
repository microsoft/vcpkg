if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 5d68739
    SHA512 141a88b462bbcc6aafaa616756c4a26ce2152720d499c6268aeb2c56946f5cb6669389d5716baf7c71bd6c51df0408c14d84d93f17095d3c978ec07771545c8b
	HEAD_REF main
)

