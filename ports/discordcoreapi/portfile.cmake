if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 251beee4a0c72236ede5fdeb61acbd1aee09d749
	SHA512 ed1a8eeaed615c863e05828923c03a7d0a06f9f26f392459d7a7ee07ead84415b8d3519f73e35443fdb19705e9d18f27272f5b55694c702f746e5df8eaa0caaa
