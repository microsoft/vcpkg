if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 132cac954ef5ac01938f6b56ecf6ccd1023fd870
	SHA512 e33e626d51e9a19558bf0f515beca8b118d3fe610468095c18ec9178cb98f37c86d91ed8d7d83b8eb1d54d41ce5fc311d5da237a1e53e6d201d954e7345c8051
