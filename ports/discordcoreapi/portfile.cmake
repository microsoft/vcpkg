if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 489c3efeb75b1f9f059171fe4b036cc82ab1d32c
	SHA512 a5ac80ec6f4ea878925765076884e2e559ba5da1d52fe159cec0025e2db8dabd0994da068cd2789975ede75c6fb90212e8c0c5a865ea9488d76f58b2db0b805b
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

