if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 8d7e0652c1139e2ab6d87f3d863c716523c2714f
	SHA512 c28be7417c1e5512dec7516f3746f2b4eb13915179093642fff68cfba9a5bfa40ccdde59682a73e5ce069b28813a04f8c9201e753cee9ac67e4165b5964567c6
