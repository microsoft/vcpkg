if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 4fae977b0b954ed476301d432e067bd7749c2a77
	SHA512 f317bb5cf3065be68c0df143cc498da9ec09fad2f745c8cdbc2fd05f03999ab9a4b7fb02ee7dcfa8611a47d0f5ccbdaf10d989a93cf11d6fc1726c12fe9a6dfb
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

