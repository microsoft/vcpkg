if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF d4bcbea0028b5ec279a5b9e99150b1ab8aa7663e
	SHA512 5db159ef7b6866e6aa994d1be3aecce84475d0b5a9b23799e3a01c08488e1aa34e714f3cf5bc36533baffa6739f10626259b0d8256255754bf040070a5f39a4c
