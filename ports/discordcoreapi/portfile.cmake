if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF e1bb23d7b62c9e018a79cac01ab1fbf03bcb96f6
	SHA512 972f30a506eed602d8c08b03a6f5d13024b208b12f29d4a05bce8412470a25e843f4ec3e9bcf337289ebe1a784e101c84c56e1426c7cecf2cf5dec020b52cbbe
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

