if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF b2f12f4bc4531efecefb194a87330a455ad65a01
	SHA512 32e91c16d48f18ffc5da402279935052f8050a076762edd208de4f5e61dd123356252d6ae6723b83a11f4186a9b954efd6f0c0c94702e4d33caf17998e3ae881
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

