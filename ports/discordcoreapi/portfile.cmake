if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 530a7d518794c9a570a4094d0318eca8b4a2fe77
	SHA512 66e80596165333637bb42d68b470cdbb7ed893293cdbb3921e0d01ca4fdfb490f52496c3a1d2b729fa814bc8c2a36130b3b5fd4c1a9b4e6dd0892ea7d1eed9d2
