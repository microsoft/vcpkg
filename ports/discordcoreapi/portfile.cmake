if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF dea179e0bce4965ed710eccbad30bc74a9adfada
	SHA512 d8fe3dfb60afeeddc0d21bb98586b022466106452682ddc410480b6674d37bc51de898b7a5797ad8f88c705260abf87a5fe862c3021cd81258c3f8547b52743c
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

