if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 98f67431fa0177eedafcfd4489db3ceab3790f65
	SHA512 ead2c62f4631410eff497bb5b08366196054febc5eede7ae03c775f52d7d0cd6851fb5e5ea3e7557b50536307338fc549a142b66236da18d1005c0c352ba7ea4
