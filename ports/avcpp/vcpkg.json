{
  "name": "avcpp",
  "version": "2.1.0",
  "description": "Wrapper for the FFmpeg that simplify usage it from C++ projects.",
  "homepage": "https://github.com/h4tr3d/avcpp",
  "license": "LGPL-2.1-only OR BSD-3-Clause",
  "dependencies": [
    {
      "name": "ffmpeg",
      "default-features": false,
      "features": [
        "avcodec",
        "avdevice",
        "avfilter",
        "avformat",
        "postproc",
        "swresample",
        "swscale"
      ]
    },
    {
      "name": "pkgconf",
      "host": true
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ]
}
