+const MaterialX::TypeDesc getMxTypeDesc(const mx::ShaderPort* port)
+{
+#if MATERIALX_MAJOR_VERSION == 1 && MATERIALX_MINOR_VERSION==38
+  return port->getType() ? *(port->getType()) : *mx::Type::NONE;
+#else
+  return port->getType();
+#endif
