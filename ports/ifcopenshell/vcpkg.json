{
  "name": "ifcopenshell",
  "version": "0.8.3",
  "description": "IfcOpenShell is an open source (LGPL) software library for working with Industry Foundation Classes (IFC).",
  "homepage": "https://github.com/IfcOpenShell/IfcOpenShell",
  "license": "LGPL-3.0-or-later",
  "supports": "!(windows & arm)",
  "dependencies": [
    "boost-circular-buffer",
    "boost-date-time",
    "boost-filesystem",
    "boost-foreach",
    "boost-locale",
    "boost-logic",
    "boost-math",
    "boost-multi-index",
    "boost-program-options",
    "boost-property-tree",
    "boost-random",
    "boost-regex",
    "boost-scope-exit",
    "boost-system",
    "boost-thread",
    "boost-uuid",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "ifcgeom": {
      "description": "Build IfcGeom",
      "dependencies": [
        "eigen3"
      ]
    },
    "opencascade": {
      "description": "Enable geometry interpretation using Open CASCADE",
      "dependencies": [
        {
          "name": "ifcopenshell",
          "default-features": false,
          "features": [
            "ifcgeom"
          ]
        },
        {
          "name": "opencascade",
          "default-features": false
        }
      ]
    }
  }
}
