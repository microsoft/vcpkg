{
  "name": "ifcopenshell",
  "version": "0.7.1",
  "description": "IfcOpenShell is an open source (LGPL) software library for working with Industry Foundation Classes (IFC).",
  "homepage": "https://github.com/IfcOpenShell/IfcOpenShell",
  "license": "LGPL-3.0-or-later",
  "supports": "!(windows & arm)",
  "dependencies": [
    "boost-circular-buffer",
    "boost-date-time",
    "boost-filesystem",
    "boost-logic",
    "boost-math",
    "boost-multi-index",
    "boost-program-options",
    "boost-property-tree",
    "boost-random",
    "boost-regex",
    "boost-scope-exit",
    "boost-system",
    "boost-thread",
    "boost-uuid",
    "cgal",
    "libxml2",
    "opencascade",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "hdf5": {
      "description": "Enable HDF5 support",
      "dependencies": [
        {
          "name": "hdf5",
          "features": [
            "cpp"
          ]
        },
        "zlib"
      ]
    },
    "ifcgeom": {
      "description": "Build IfcGeom",
      "dependencies": [
        "opencascade"
      ]
    },
    "python": {
      "description": "Build python package",
      "dependencies": [
        "python3"
      ]
    },
    "usd": {
      "description": "Build IfcConvert with USD support (requires pixar's USD library)",
      "dependencies": [
        "usd"
      ]
    },
    "vld": {
      "description": "Use Visual Leak Detector for debugging memory leaks, MSVC-only"
    }
  }
}
