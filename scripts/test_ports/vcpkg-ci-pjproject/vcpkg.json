{
  "name": "vcpkg-ci-pjproject",
  "version-string": "ci",
  "description": "Port to test features of pjproject within CI",
  "homepage": "https://github.com/microsoft/vcpkg",
  "license": "MIT",
  "dependencies": [
    {
      "name": "pjproject",
      "default-features": false
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    }
  ],
  "default-features": [
    "all"
  ],
  "features": {
    "all": {
      "description": "Test all features",
      "dependencies": [
        {
          "name": "pjproject",
          "features": [
            "opus",
            "ssl",
            "video"
          ]
        }
      ]
    },
    "basic": {
      "description": "Test with no additional features",
      "dependencies": [
        {
          "name": "pjproject"
        }
      ]
    }
  }
}