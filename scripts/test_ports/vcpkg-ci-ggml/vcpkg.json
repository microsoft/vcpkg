{
  "name": "vcpkg-ci-ggml",
  "version-string": "ci",
  "description": "Port to validate ggml",
  "homepage": "https://github.com/microsoft/vcpkg",
  "license": "MIT",
  "dependencies": [
    {
      "$comment": "Lacks default (CPU) backend on arm64 windows",
      "name": "ggml",
      "default-features": false,
      "features": [
        {
          "name": "vulkan",
          "platform": "windows & arm64"
        }
      ]
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    }
  ],
  "default-features": [
    {
      "name": "blas",
      "platform": "!(windows & static)"
    },
    {
      "$comment": "Lacks pkg-config link libs for static builds",
      "name": "cuda",
      "platform": "windows & x64 & !uwp & !xbox & !static"
    },
    {
      "name": "metal",
      "platform": "osx"
    },
    {
      "name": "opencl",
      "platform": "!arm32"
    },
    {
      "name": "openmp",
      "platform": "!osx"
    },
    {
      "name": "vulkan",
      "platform": "!x86"
    }
  ],
  "features": {
    "blas": {
      "description": "Enable BLAS support",
      "dependencies": [
        {
          "name": "ggml",
          "default-features": false,
          "features": [
            "blas"
          ]
        }
      ]
    },
    "cuda": {
      "description": "Enable CUDA support",
      "dependencies": [
        {
          "name": "ggml",
          "default-features": false,
          "features": [
            "cuda"
          ]
        }
      ]
    },
    "metal": {
      "description": "Enable Metal support",
      "supports": "osx",
      "dependencies": [
        {
          "name": "ggml",
          "default-features": false,
          "features": [
            "metal"
          ]
        }
      ]
    },
    "opencl": {
      "description": "Enable OpenCL support",
      "dependencies": [
        {
          "name": "ggml",
          "default-features": false,
          "features": [
            "opencl"
          ]
        }
      ]
    },
    "openmp": {
      "description": "Enable OpenMP support",
      "supports": "!osx",
      "dependencies": [
        {
          "name": "ggml",
          "default-features": false,
          "features": [
            "openmp"
          ]
        }
      ]
    },
    "vulkan": {
      "description": "Enable Vulkan support",
      "supports": "!x86",
      "dependencies": [
        {
          "name": "ggml",
          "default-features": false,
          "features": [
            "vulkan"
          ]
        }
      ]
    }
  }
}
